<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.file_store">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoTheme">
        <activity
            android:name=".SeeSecretKey"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".DecryptOwnFiles"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".DecryptFiles"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".OwnerInfo"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".UploadFiles"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".UserFiles"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".ShowFiles"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoAction"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.NoAction"
            android:screenOrientation="portrait"
            android:exported="true"
             />

        <activity
            android:name=".User"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>